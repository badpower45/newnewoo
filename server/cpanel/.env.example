# Allosh Market API - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Or use individual settings:
# DB_HOST=db.xxxxx.supabase.co
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=postgres
# DB_PORT=5432
# DB_SSL=true

# ===========================================
# JWT SECRET (REQUIRED - Generate a strong random string)
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# ===========================================
# SERVER SETTINGS
# ===========================================
PORT=3001
NODE_ENV=production

# ===========================================
# FRONTEND URL (for CORS and password reset emails)
# ===========================================
FRONTEND_URL=https://your-frontend-domain.com

# Your cPanel domain (for CORS)
CPANEL_DOMAIN=https://api.your-domain.com

# ===========================================
# SUPABASE (Optional - for Edge Functions)
# ===========================================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key
