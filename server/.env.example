# JWT Secret - MUST be set! Server will crash without it.
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Minimum 32 characters, recommended 64+ characters
JWT_SECRET=REPLACE_WITH_YOUR_64_CHARACTER_RANDOM_STRING_HERE

# ==============================================
# üóÑÔ∏è DATABASE (PostgreSQL/Supabase - REQUIRED)
# ==============================================

# Option 1: Supabase Pooler (Recommended for Production)
DB_HOST=aws-0-region.pooler.supabase.com
DB_USER=postgres.your-project-ref
DB_PORT=6543
DB_PASSWORD=your-database-password-here
DB_NAME=postgres
DB_SSL=true

# Option 2: Full Connection String (Overrides individual vars)
# DATABASE_URL=postgres://user:pass@host:port/dbname?sslmode=require

# Option 3: Local Development
# DB_HOST=localhost
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=lumina_fresh_market
# DB_PORT=5432
# DB_SSL=false

