# ==============================================
# LUMINA FRESH MARKET - BACKEND ENVIRONMENT
# ==============================================

# Database Configuration (Supabase Pooler - Recommended for Production)
DB_HOST=aws-0-region.pooler.supabase.com
DB_USER=postgres.your-project-ref
DB_PORT=6543
DB_PASSWORD=your-database-password-here
DB_NAME=postgres
DB_SSL=true

# Alternative: Direct Connection (Development only)
# DB_HOST=your-project.supabase.co
# DB_PORT=5432

# Optional: Full Connection String (Overrides individual vars)
# DATABASE_URL=postgres://user:pass@host:port/dbname?sslmode=require

# JWT Secret (CRITICAL: Generate a strong secret!)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-replace-this-with-random-string

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS) - Multiple origins separated by comma
FRONTEND_URL=http://localhost:5173
# Production example: FRONTEND_URL=https://yourapp.netlify.app,https://www.yourapp.com

# Optional: Cloudinary (for image uploads)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Optional: Allow dev seeding endpoint (disable in production)
# ALLOW_DEV_SEED=false
